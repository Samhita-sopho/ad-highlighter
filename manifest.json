{
    "name": "Ad-Dectector",
    "version": "1.0",
    "description": "This extension highlights the ads making them easy to detect and to avoid clicking malicious links",
    "permissions": ["desktopCapture","activeTab","declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "page_action": {
        "default_popup": "popup.html"
      },  
    "manifest_version": 2
  }